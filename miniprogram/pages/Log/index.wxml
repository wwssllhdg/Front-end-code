
<scroll-view class="container" style="background-image: url('/image/backgroundnew.png'); background-size: cover; width: 100%; height: 100vh;">

  <text class="login">登录</text>
  <view class="container" >


    <view class="login-form">
      <view class="input-wrapper1">
        <input type="text" class="input" placeholder="请输入手机号" bind:input="onPhoneInput" />
      </view>
      <view class="input-wrapper2">
        <input type="password" class="input" placeholder="输入密码" bind:input="onPasswordInput" />
      </view>
      <button class="login-button" bindtap="onLogin"  style="width:100%">登录</button>
      <button class="register-button" bindtap="onRegister"  style="width:100%">注册</button>

    </view>
    <text class="attention">登录/注册表示您同意《用户协议》和《隐私政策》</text>
  </view>
</scroll-view>
