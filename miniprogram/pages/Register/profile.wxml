<navigation-bar title="注册" back="{{true}}" color="black" background="#FFF"></navigation-bar>

<scroll-view class="scroll-view_H" scroll-y="true">
  <view class="outLayer">
    
    <view class="set">
      <view class="Phonenumber" style="background-color: #FFF;">   
        <text class="login">手机号</text>   
        <input class="inputItem" placeholder="请输入手机号" bindinput="onPhoneInput"></input>
      </view>
    
      <view class="code" style="background-color: #FFF;">   
        <text class="login">验证码</text>   
        <input class="inputItem" placeholder="请输入验证码" bindinput="onCodeInput"></input>
        <view class="btn">
          <text class="getRepassword" bindtap="onGetCode">获取验证码</text> 
        </view>
      </view>

      <view class="password" style="background-color: #FFF;">
        <text class="login">密码</text>  
        <input class="inputItema" placeholder="请输入密码" bindinput="onPasswordInput"></input>
      </view>
    </view>

    <view class="UserAgreement">
      <image class="picture" mode="widthFix" src="/image/UserAgreement.png"></image>
      <text class="agreement">用户协议</text>
    </view>

    <view class="button1">
      <button class="btnItem" type="primary" bindtap="onRegister">注册</button>
    </view>
    
  </view>
</scroll-view>
