<navigation-bar title="注册" back="{{true}}" color="black" background="#FFF"></navigation-bar>

<scroll-view class="container" style="background-image: url('/image/rainbow.png'); background-size: cover; width: 100%; height: 100vh;">
  
  <view class="first">          
    <image class="back-icon" src="/image/Return.jpg" alt="返回" bindtap="goBack"></image>
  </view>
  
  <view class="second">
    <text class="text1">{{questionName}}</text> <!-- 动态显示题目内容 -->
  </view>
  
  <view class="third">           
    <!-- 选项A -->
    <view class="A {{AClass}}" bindtap="selectOption" data-option="A">
      <text class="text2">{{questionChoiceA}}</text> <!-- 动态显示选项A -->
    </view>
    <!-- 选项B -->
    <view class="B {{BClass}}" bindtap="selectOption" data-option="B">
      <text class="text3">{{questionChoiceB}}</text> <!-- 动态显示选项B -->
    </view> 
    <!-- 选项C -->
    <view class="C {{CClass}}" bindtap="selectOption" data-option="C">
      <text class="text4">{{questionChoiceC}}</text> <!-- 动态显示选项C -->
    </view>
    <!-- 选项D -->
    <view class="D {{DClass}}" bindtap="selectOption" data-option="D">
      <text class="text5">{{questionChoiceD}}</text> <!-- 动态显示选项D -->
    </view>  
  </view>

 <view class="forth">
  <!-- 上一题按钮 -->
  <view class="Previousquestion" bindtap="goPrevious" wx:if="{{!isFirstQuestion}}">
    <text class="text6">上一题</text>
  </view>
  <view class="Previousquestion transparent" wx:if="{{isFirstQuestion}}">
    <!-- 第一题时显示透明占位 -->
    <text class="text6"></text>
  </view>

  <!-- 题目进度 -->
  <text class="text7">{{questionProgress}}</text>

  <!-- 下一题或提交按钮 -->
  <view class="Nextquestion" wx:if="{{!isLastQuestion}}" bindtap="goNext">
    <text class="text8">下一题</text>
  </view>
  <view class="Nextquestion" wx:if="{{isLastQuestion}}" bindtap="submitAnswer">
    <text class="text8">提交</text>
  </view>


  </view>
</scroll-view>
